<h1>New product</h1>

<% form_for(@product, :url => { :action => "create" }, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :product_name %><br />
    <%= f.text_field :product_name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
<p>
	<%= f.label :image %><br />
	<%= f.file_field :image %>
</p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list, :size => 80 %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>